<LoginScreen2>
    name: "loginscreen2"
    email: email
    password: password
    toogle: toogle
    Image:
        source: "loginbg.png"
        size_hint: 1.1, 1.1
        pos_hint: {"center_x": .5, "center_y": .5}
    MDLabel:
        
        text: "Login"
        font_name: "MPoppins"
        font_size: "40sp"
        pos_hint: {"center_x": .28, "center_y": .72}
        halign: "center"
        color: rgba(0,0,0,255)

    MDLabel:
        
        text: "Welcome back, Please enter your details!"
        font_name: "SPoppins"
        font_size: "16sp"
        pos_hint: {"center_x": .35, "center_y": .667}
        halign: "center"
        color: rgba(0,0,0,255)
            
    MDTextField:
        id: email
        mode: "rectangle"
        hint_text: "Email"
        helper_text: "Enter Email Address"
        helper_text_mode: "on_focus"
        pos_hint: {"center_x": .335, "center_y": .55}
        size_hint: .17, .07
        cursor_color: 0,0,0,1
        cursor_width: "2sp"
        multiline: False
        background_color: 0,0,0,0
        padding: 15
        font_name: "SPoppins"
        font_size: "14sp"
        hint_text_color: rgba(3, 144, 252,255)
    Image:
        source: "user.png"
        size_hint: .03,.03
        pos_hint: {"center_x": .41, "center_y": .545}

    MDTextField:
        id: password
        mode: "rectangle"
        helper_text: "Enter Password"
        helper_text_mode: "on_focus"
        hint_text: "Password"
        password: True
        pos_hint: {"center_x": .335, "center_y": .445}
        size_hint: .17, .07
        cursor_color: 0,0,0,1
        cursor_width: "2sp"
        multiline: False
        background_color: 0,0,0,0
        padding: 15
        font_name: "SPoppins"
        font_size: "14sp"
        hint_text_color: rgba(3, 144, 252,255)
    MDIconButton:
        id: toogle
        icon:"eye"
        user_font_size: "20sp"
        pos_hint: {"center_x": .41, "center_y": .44}
        on_release:
            root.tooglevisibility()
    MDFillRoundFlatButton:
        text :"Login"
        pos_hint: {"center_x": 0.2928, "center_y": 0.32}
        font_size: "20sp"
        size_hint: .1, .065
        font_name: "BPoppins"
        md_bg_color: rgba(0,88,188,255)
        on_press:
            root.manager.transition.direction = "up"
            root.loginBtn()
    MDLabel:
        text: "Don't have an account?"
        font_name: "LPoppins"
        font_size: "14sp"
        pos_hint: {"center_x": .33, "center_y": .2}
        halign: "center"
        color: rgba(0,0,0,255)
    MDTextButton:
        text: "Sign Up"
        font_name: "LPoppins"
        font_size: "14sp"
        pos_hint: {"center_x": .405, "center_y": .2}
        color: rgba(66,135,245,255)
        on_press:
            root.manager.transition.direction = "left"
            root.manager.current = "loginscreen3"
    MDFloatingActionButton:
        icon: "home"
        md_bg_color: rgba(255,255,255,255)
        text_color: rgba(66,135,245,255)
        pos_hint: {"center_x": .04, "center_y": .94}
        on_press:
            root.manager.transition.direction = "right"
            root.manager.current = "loginscreen"         
    MDIconButton:
        ripple_scale: 0
        icon: "github"
        pos_hint: {"center_x": 0.963, "center_y": .05}
        user_font_size: "40sp"
        on_press:
            root.git()