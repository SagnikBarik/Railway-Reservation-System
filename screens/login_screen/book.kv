<Book>:
    name: "bk"
    pnr: pnr
    tx: tx
    fsn: fsn
    tsn: tsn
    dt_mon: dt_mon
    passenger: passenger
    fromhead: fromhead
    tohead: tohead
    fromst: fromst 
    tost: tost
    Image:
        source: "screen.png"
        size_hint: 1.1, 1.1
        pos_hint: {"center_x": .5, "center_y": .5}
    MDCard:    
        size_hint:  (.3,.23)
        pos_hint: {"center_x": .5, "center_y": .8}
        md_bg_color: 1,1,1,1
        elevation: 10
        radius: [10,10,10,10]
        FitImage:
            source: "screen1.png"
            size_hint: 1.1, 1.1
            pos_hint: {"center_x": .5, "center_y": .5}
            radius: [10,10,10,10]
    Image:
        source: "decision-making.png"
        size_hint: .26, .26
        pos_hint: {"center_x": .5, "center_y": .82}
    MDLabel:
        id: fromhead  
        text:"PNR:"
        font_name: "MPoppins"
        font_size: "32sp"
        halign: "center"
        pos_hint: {"center_x": .41, "center_y": .82}
        color: rgba(0,0,0,255)
    MDLabel:
        id: tohead
        text:"TRAIN:"
        font_name: "MPoppins"
        font_size: "32sp"
        halign: "center"
        pos_hint: {"center_x": .59, "center_y": .82}
        color: rgba(0,0,0,255)
    MDLabel:
        id: fromst  
        text:"PNR:"
        font_name: "SPoppins"
        font_size: "16sp"
        halign: "center"
        pos_hint: {"center_x": .41, "center_y": .75}
        color: rgba(0,0,0,255)
    MDLabel:
        id: tost
        text:"TRAIN:"
        font_name: "SPoppins"
        font_size: "16sp"
        halign: "center"
        pos_hint: {"center_x": .59, "center_y": .75}
        color: rgba(0,0,0,255)
    MDCard:    
        size_hint:  (.3,.57)
        pos_hint: {"center_x": .5, "center_y": .37}
        md_bg_color: 1,1,1,1
        elevation: 10
        radius: [8,8,8,8]
        padding: 20
        ScrollView:
            GridLayout:
                cols: 1
                MDLabel:   
                    id:pnr
                    text:"PNR:"
                    font_name: "SPoppins"
                    font_size: "15sp"
                    halign: "left"
                    color: rgba(0,0,0,255)
                MDLabel:   
                    id:tx
                    text:"TRAIN:"
                    font_name: "SPoppins"
                    font_size: "15sp"
                    halign: "left"
                    color: rgba(0,0,0,255)
                MDLabel:   
                    id:fsn
                    text:"FROM:"
                    font_name: "SPoppins"
                    font_size: "15sp"
                    halign: "left"
                    color: rgba(0,0,0,255)
                MDLabel:   
                    id:tsn
                    text:"TO:"
                    font_name: "SPoppins"
                    font_size: "15sp"
                    halign: "left"
                    color: rgba(0,0,0,255)
                MDLabel:   
                    id:dt_mon
                    text:"DATE:"
                    font_name: "SPoppins"
                    font_size: "15sp"
                    halign: "left"
                    color: rgba(0,0,0,255)
                ScrollView:
                    do_scroll_x: False  
                    do_scroll_y: True
                    GridLayout:
                        cols: 1
                        size_hint_y: None
                        size: root.width * 0.1, root.height * 0.1
                        MDLabel:   
                            id:passenger
                            text:"PASSENGER:"
                            font_name: "SPoppins"
                            font_size: "15sp"
                            halign: "left"
                            color: rgba(0,0,0,255)
    MDIconButton:
        icon:"logout"
        pos_hint: {"center_x": 0.95, "center_y": .94}
        user_font_size: "40sp"
        on_release:
            root.manager.current = "loginscreen2"
            root.manager.transition.direction = "down"
    MDIconButton:
        icon: "home-outline"
        pos_hint: {"center_x": 0.95, "center_y": .89}
        user_font_size: "40sp"
        on_press:
            root.manager.transition.direction = "right"
            root.manager.current = "choose"