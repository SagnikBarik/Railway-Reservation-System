<Payment>:
    name: "pay"
    Image:
        source: "screen.png"
        size_hint: 1.1, 1.1
        pos_hint: {"center_x": .5, "center_y": .5}
    Carousel:
        MDFloatLayout:
            MDCard:
                size_hint: .3988, .493
                pos_hint: {"center_x": .5, "center_y": .55}
                radius: [22,22,22,22]
                #padding: 5
                Image:
                    source: "cardone.png"
                    size_hint: 1, 1
            Image:
                source: "swipe-left.png"
                pos_hint: {"center_x": .53, "center_y": .24}
                size_hint: .95, .95
            MDLabel:
                text: "Swipe"
                pos_hint: {"center_x": .94, "center_y": .23}
                font_name: "BPoppins"
                font_size: "30sp"
            MDLabel:
                text: "Card No: "
                pos_hint: {"center_x": .833, "center_y": .5324}
                font_name: "SPoppins"
                font_size: "25sp"
            MDTextField:
                pos_hint: {"center_x": .55, "center_y": .5}
                size_hint: .29, .04
                
            # MDTextFieldRect:
            #     size_hint: .38, .04
            #     pos_hint: {"center_x": .5, "center_y": .55}
            #     #height: "30dp"
        MDFloatLayout:
            MDCard:
                size_hint: .3988, .493
                pos_hint: {"center_x": .5, "center_y": .55}
                radius: [22,22,22,22]
                #padding: 5
                Image:
                    source: "cardtwo.png"
                    size_hint: 1, 1
            MDFillRoundFlatButton:
                text :"Pay"
                pos_hint: {"center_x": 0.5, "center_y": 0.15}
                font_size: "20sp"
                size_hint: .125, .065
                font_name: "BPoppins"
                md_bg_color: 0,45/255,104/255,1
                on_press:
                    root.bookbtn()      
    MDIconButton:
        icon:"logout"
        pos_hint: {"center_x": 0.95, "center_y": .94}
        user_font_size: "40sp"
        on_release:
            root.manager.current = "loginscreen2"
            root.manager.transition.direction = "down"
    MDIconButton:
        icon: "home-outline"
        pos_hint: {"center_x": 0.95, "center_y": .89}
        user_font_size: "40sp"
        on_press:
            root.manager.transition.direction = "right"
            root.manager.current = "choose"   