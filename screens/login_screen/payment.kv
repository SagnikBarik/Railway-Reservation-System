<Payment>:
    name: "pay"
    Image:
        source: "screen.png"
        size_hint: 1.1, 1.1
        pos_hint: {"center_x": .5, "center_y": .5}
    Carousel:
        MDFloatLayout:
            MDCard:
                size_hint: .3988, .492
                pos_hint: {"center_x": .5, "center_y": .55}
                radius: [30,30,30,30]
                #padding: 5
                Image:
                    source: "cardone.png"
                    #size_hint: 1, 1
            Image:
                source: "swipe-left.png"
                pos_hint: {"center_x": .53, "center_y": .24}
                size_hint: .95, .95
            MDLabel:
                text: "Swipe"
                pos_hint: {"center_x": .94, "center_y": .23}
                font_name: "BPoppins"
                font_size: "30sp"
            MDTextField:
                mode: "rectangle"
                helper_text: ""
                helper_text_mode: "on_focus"
                hint_text: "Card Number"
                pos_hint: {"center_x": .5, "center_y": .535}
                size_hint: .31762, .06
        MDFloatLayout:
            MDCard:
                size_hint: .3988, .493
                pos_hint: {"center_x": .5, "center_y": .55}
                radius: [22,22,22,22]
                #padding: 5
                Image:
                    source: "cardtwo.png"
                    size_hint: 1, 1
            MDFillRoundFlatButton:
                text :"Pay"
                pos_hint: {"center_x": 0.5, "center_y": 0.15}
                font_size: "20sp"
                size_hint: .125, .065
                font_name: "BPoppins"
                md_bg_color: 0,45/255,104/255,1
                on_press:
                    root.bookbtn()      
    MDIconButton:
        icon:"logout"
        pos_hint: {"center_x": 0.963, "center_y": .05}
        user_font_size: "40sp"
        on_release:
            root.manager.current = "loginscreen2"
            root.manager.transition.direction = "down"
    MDIconButton:
        ripple_scale: 0
        icon: "home-outline"
        pos_hint: {"center_x": 0.96, "center_y": .95}
        user_font_size: "40sp"
        on_press:
            root.manager.transition.direction = "right"
            root.manager.current = "choose"
    MDIconButton:
        ripple_scale: 0
        icon: "github"
        pos_hint: {"center_x": 0.96, "center_y": .13}
        user_font_size: "40sp"
        on_press:
            root.git()