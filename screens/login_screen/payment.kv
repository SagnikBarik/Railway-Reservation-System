<Payment>:
    name: "pay"
    cardnum: cardnum
    valid: valid
    cvv: cvv
    namea: namea
    Image:
        source: "screen.png"
        size_hint: 1.1, 1.1
        pos_hint: {"center_x": .5, "center_y": .5}
    Carousel:
        id: carousel
        MDFloatLayout:
            MDCard:
                size_hint: .3988, .492
                pos_hint: {"center_x": .5, "center_y": .55}
                radius: [30,30,30,30]
                Image:
                    source: "cardone.png"
            MDTextButton:
                text: "Swipe"
                pos_hint: {"center_x": .51, "center_y": .243}
                font_name: "BPoppins"
                font_size: "30sp"
                on_release:
                    carousel.load_next()
            MDIconButton:
                icon:"keyboard-backspace"
                user_font_size: "45sp"
                pos_hint: {"center_x": .46, "center_y": .241223}
                on_release:
                    carousel.load_next()

            MDTextField:
                id: cardnum
                mode: "rectangle"
                max_text_length: 16
                helper_text: ""
                helper_text_mode: "on_focus"
                hint_text: "Card Number"
                pos_hint: {"center_x": .5, "center_y": .535}
                size_hint: .31762, .06
                helper_text_color: 1,1,1,1
                hint_text_color_focus: 0,0,0,1
            MDTextField:
                id: namea
                mode: "rectangle"
                helper_text: ""
                helper_text_mode: "on_focus"
                hint_text: "Name"
                pos_hint: {"center_x": .4445555, "center_y": .38569}
                size_hint: .1394, .06
                helper_text_color: 1,1,1,1
                hint_text_color_focus: 0,0,0,1
            MDTextField:
                id: valid
                mode: "rectangle"
                max_text_length: 5
                helper_text: ""
                hint_text: "MM/YY"
                helper_text_mode: "on_focus"
                pos_hint: {"center_x": .46, "center_y": .463}
                size_hint: .068, .06
                helper_text_color: 1,1,1,1
                hint_text_color_focus: 0,0,0,1
        MDFloatLayout:
            MDCard:
                size_hint: .3988, .493
                pos_hint: {"center_x": .5, "center_y": .55}
                radius: [22,22,22,22]
                Image:
                    source: "cardtwo.png"
                    size_hint: 1, 1
            MDTextField:
                id: cvv
                mode: "rectangle"
                max_text_length: 3
                helper_text: ""
                hint_text: "CVV"
                helper_text_mode: "on_focus"
                pos_hint: {"center_x": .641, "center_y": .5361}
                size_hint: .0545, .073
                helper_text_color: 1,1,1,1
                hint_text_color_focus: 0,0,0,1
            MDLabel:
                text: "Signature"
                font_name: "Signature"
                font_size: "28sp"
                pos_hint: {"center_x": .37, "center_y": .52}
                halign: "center"
                color: rgba(0,0,0,255)
                
            MDFillRoundFlatButton:
                text :"Pay"
                pos_hint: {"center_x": 0.5, "center_y": 0.15}
                font_size: "20sp"
                size_hint: .125, .065
                font_name: "BPoppins"
                md_bg_color: 0,45/255,104/255,1
                on_press:
                    root.bookbtn()
                  
    MDIconButton:
        icon:"logout"
        pos_hint: {"center_x": 0.963, "center_y": .05}
        user_font_size: "40sp"
        on_release:
            root.manager.current = "loginscreen2"
            root.manager.transition.direction = "down"
    
    MDIconButton:
        ripple_scale: 0
        icon: "home-outline"
        pos_hint: {"center_x": 0.96, "center_y": .95}
        user_font_size: "40sp"
        on_press:
            root.manager.transition.direction = "right"
            root.manager.current = "choose"
    MDIconButton:
        ripple_scale: 0
        icon: "github"
        pos_hint: {"center_x": 0.96, "center_y": .13}
        user_font_size: "40sp"
        on_press:
            root.git()