<TwoChoice>:
    name: "choose"
    n: n
    Image:
        source: "choicescreen.png"
        size_hint: 1.1, 1.1
        pos_hint: {"center_x": .5, "center_y": .5}
    MDLabel:
        id: n
        halign: "left"
        pos_hint: {"center_x": 0.53,'center_y': .9297}
        text: "Hi,"
        font_name: "SPoppins"
        font_size: "37sp"
        color: rgba(0,0,0,255)
    MDRoundFlatButton:
        text :"Book"
        pos_hint: {"center_x": 0.4067, "center_y": 0.355}
        font_size: "20sp"
        size_hint: .1, .065
        font_name: "BPoppins"
        text_color: rgba(0,88,188,255)
        line_color: rgba(0,88,188,255)
        on_press: 
            root.manager.transition.direction = "left"
            root.manager.current = "main"
    MDRoundFlatButton:
        text :"Search PNR"
        pos_hint: {"center_x": 0.593, "center_y": 0.355}
        font_size: "20sp"
        size_hint: .1, .065
        font_name: "BPoppins"
        text_color: rgba(0,88,188,255)
        line_color: rgba(0,88,188,255)
        on_press: 
            root.manager.transition.direction = "left"
            root.manager.current = "pnrch"
    MDIconButton:
        icon:"logout"
        pos_hint: {"center_x": 0.95, "center_y": .94}
        user_font_size: "40sp"
        on_release:
            root.manager.current = "loginscreen2"
            root.manager.transition.direction = "down"
