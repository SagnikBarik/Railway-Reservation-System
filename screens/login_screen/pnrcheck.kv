<PnrCheck>:
    name: "pnrch"
    pnra: pnra
    txa: txa
    fsna: fsna
    tsna: tsna
    dt_mona: dt_mona
    passengera: passengera
    pnrinputa: pnrinputa
    Image:
        source: "screen.png"
        size_hint: 1.1, 1.1
        pos_hint: {"center_x": .5, "center_y": .5}
    MDTextField:
        id: pnrinputa
        mode: "rectangle"
        hint_text: "PNR"
        helper_text: "Enter PNR no."
        helper_text_mode: "on_focus"
        pos_hint: {"center_x": .12, "center_y": .7}
        helper_text_mode: 'on_focus'
        size_hint: .17, .07
        cursor_color: 0,0,0,1
        cursor_width: "2sp"
        multiline: False
        background_color: 0,0,0,0
        padding: 15
        font_name: "SPoppins"
        font_size: "14sp"
        hint_text_color: rgba(3, 144, 252,255)
    MDFillRoundFlatButton:
        text :"Add Passenger"
        pos_hint: {"center_x": 0.08, "center_y": 0.15}
        font_size: "20sp"
        size_hint: .125, .065
        font_name: "BPoppins"
        md_bg_color: 0,45/255,104/255,1
        on_press:
            root.search()
    MDCard:    
        size_hint: (.4,.3)
        pos_hint: {"center_x": .5, "center_y": .5}
        md_bg_color: 1,1,1,1
        elevation: 10
        radius: [8,8,8,8]
        padding: 20
        BoxLayout:
            orientation: 'vertical'
            MDLabel:   
                id:pnra
                text:"PNR:"
                font_name: "SPoppins"
                font_size: "15sp"
                halign: "left"
                color: rgba(0,0,0,255)
            MDLabel:   
                id:txa
                text:"TRAIN:"
                font_name: "SPoppins"
                font_size: "15sp"
                #pos_hint: {"center_x": .35, "center_y": .72}
                halign: "left"
                color: rgba(0,0,0,255)
            MDLabel:   
                id:fsna
                text:"FROM:"
                font_name: "SPoppins"
                font_size: "15sp"
                #pos_hint: {"center_x": .35, "center_y": .64}
                halign: "left"
                color: rgba(0,0,0,255)
            MDLabel:   
                id:tsna
                text:"TO:"
                font_name: "SPoppins"
                font_size: "15sp"
                #pos_hint: {"center_x": .35, "center_y": .56}
                halign: "left"
                color: rgba(0,0,0,255)
            MDLabel:   
                id:dt_mona
                text:"DATE:"
                font_name: "SPoppins"
                font_size: "15sp"
                #pos_hint: {"center_x": .35, "center_y": .48}
                halign: "left"
                color: rgba(0,0,0,255)
            MDLabel:   
                id:passengera
                text:"PASSENGER:"
                font_name: "SPoppins"
                font_size: "15sp"
                #pos_hint: {"center_x": .35, "center_y": .40}
                halign: "left"
                color: rgba(0,0,0,255)