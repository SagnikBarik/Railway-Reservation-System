<PnrCheck>:
    name: "pnrch"
    pnra: pnra
    txa: txa
    fsna: fsna
    tsna: tsna
    dt_mona: dt_mona
    passengera: passengera
    pnrinputa: pnrinputa
    Image:
        source: "screen.png"
        size_hint: 1.1, 1.1
        pos_hint: {"center_x": .5, "center_y": .5}
    MDTextField:
        id: pnrinputa
        mode: "rectangle"
        hint_text: "PNR"
        helper_text: "Enter PNR no."
        helper_text_mode: "on_focus"
        pos_hint: {"center_x": .443, "center_y": .85}
        helper_text_mode: 'on_focus'
        size_hint: .15, .073
        cursor_color: 0,0,0,1
        cursor_width: "2sp"
        multiline: False
        background_color: 0,0,0,0
        padding: 15
        font_name: "SPoppins"
        font_size: "14sp"
        hint_text_color: rgba(3, 144, 252,255)
    MDFillRoundFlatButton:
        text :"SEARCH"
        pos_hint: {"center_x": 0.5891, "center_y": 0.8487}
        font_size: "20sp"
        size_hint: .1, .063
        font_name: "BPoppins"
        md_bg_color: 0,45/255,104/255,1
        on_press:
            root.search()
    MDFillRoundFlatButton:
        text :"Book Ticket"
        pos_hint: {"center_x": 0.58, "center_y": 0.13}
        font_size: "20sp"
        size_hint: .13, .063
        font_name: "BPoppins"
        md_bg_color: 0,45/255,104/255,1
        on_press:
            root.manager.transition.direction = "left"
            root.manager.current = "main"
    MDRoundFlatButton:
        text: "Cancel Ticket"
        pos_hint: {"center_x": 0.42, "center_y": 0.13}
        font_size: "20sp"
        size_hint: .13, .063
        font_name: "BPoppins"
        md_bg_color: 0,45/255,104/255,1
        on_press:
            root.cancel()
    MDCard:    
        size_hint: (.3,.57)
        pos_hint: {"center_x": .5, "center_y": .5}
        md_bg_color: 1,1,1,1
        elevation: 10
        radius: [8,8,8,8]
        padding: 20
        GridLayout:
            cols: 1           
            MDLabel:   
                id:pnra
                text:"PNR:"
                font_name: "SPoppins"
                font_size: "15sp"
                halign: "left"
                color: rgba(0,0,0,255)
            MDLabel:   
                id:txa
                text:"TRAIN:"
                font_name: "SPoppins"
                font_size: "15sp"
                halign: "left"
                color: rgba(0,0,0,255)
            MDLabel:   
                id:fsna
                text:"FROM:"
                font_name: "SPoppins"
                font_size: "15sp"
                halign: "left"
                color: rgba(0,0,0,255)
            MDLabel:   
                id:tsna
                text:"TO:"
                font_name: "SPoppins"
                font_size: "15sp"
                halign: "left"
                color: rgba(0,0,0,255)
            MDLabel:   
                id:dt_mona
                text:"DATE:"
                font_name: "SPoppins"
                font_size: "15sp"
                halign: "left"
                color: rgba(0,0,0,255)
            ScrollView:
                do_scroll_x: False  
                do_scroll_y: True
                GridLayout:
                    cols: 1
                    size_hint_y: None
                    size: root.width * 0.1, root.height * 0.1
                    MDLabel:   
                        id:passengera
                        text:"PASSENGER:"
                        font_name: "SPoppins"
                        font_size: "15sp"
                        #pos_hint: {"center_x": .35, "center_y": .40}
                        halign: "left"
                        color: rgba(0,0,0,255)
    MDIconButton:
        icon:"logout"
        pos_hint: {"center_x": 0.963, "center_y": .05}
        user_font_size: "40sp"
        on_release:
            root.manager.current = "loginscreen2"
            root.manager.transition.direction = "down"
    MDIconButton:
        icon: "home-outline"
        pos_hint: {"center_x": 0.96, "center_y": .95}
        user_font_size: "40sp"
        on_press:
            root.manager.transition.direction = "right"
            root.manager.current = "choose"
    MDIconButton:
        icon: "github"
        pos_hint: {"center_x": 0.96, "center_y": .13}
        user_font_size: "40sp"
        on_press:
            root.git()