<LoginScreen3>
    name: "loginscreen3"
    namee: namee
    email: email
    password: passw
    chpassw: chpassw
    toogle: toogle
    tooglea: tooglea
    Image:
        source: "loginbg1.png"
        size_hint: 1.1, 1.1
        pos_hint: {"center_x": .5, "center_y": .5}

    MDLabel:       
        text: "Sign Up"
        font_name: "MPoppins"
        font_size: "40sp"
        pos_hint: {"center_x": .292, "center_y": .78}
        halign: "center"
        color: rgba(0,0,0,255)

    MDLabel:       
        text: "Welcome, begin your journey!"
        font_name: "SPoppins"
        font_size: "16sp"
        pos_hint: {"center_x": .32, "center_y": .727}
        halign: "center"
        color: rgba(0,0,0,255)

    MDTextField:
        id:namee
        mode: "rectangle"
        hint_text: "Full Name"
        helper_text: "Enter Full Name"
        pos_hint: {"center_x": .335, "center_y": .62}
        helper_text_mode: 'on_focus'
        size_hint: .17, .07
        cursor_color: 0,0,0,1
        cursor_width: "2sp"
        multiline: False
        background_color: 0,0,0,0
        padding: 15
        font_name: "SPoppins"
        font_size: "14sp"
        hint_text_color: rgba(3, 144, 252,255)

    Image:
        source: "name.png"
        size_hint: .035,.035
        pos_hint: {"center_x": .41, "center_y": .615}
               
    MDTextField:
        id: email
        mode: "rectangle"
        hint_text: "Email"
        helper_text: "Enter Valid Email Address"
        pos_hint: {"center_x": .335, "center_y": .53}
        helper_text_mode: 'on_focus'
        size_hint: .17, .07
        cursor_color: 0,0,0,1
        cursor_width: "2sp"
        multiline: False
        background_color: 0,0,0,0
        padding: 15
        font_name: "SPoppins"
        font_size: "14sp"
        hint_text_color: rgba(3, 144, 252,255)
    Image:
        source: "user.png"
        size_hint: .03,.03
        pos_hint: {"center_x": .41, "center_y": .525}

    MDTextField:
        id: passw
        mode: "rectangle"
        hint_text: "Password"
        helper_text: "Use a Strong Password"
        password: True
        pos_hint: {"center_x": .335, "center_y": .44}
        helper_text_mode: 'on_focus'
        size_hint: .17, .07
        cursor_color: 0,0,0,1
        cursor_width: "2sp"
        multiline: False
        background_color: 0,0,0,0
        padding: 15
        font_name: "SPoppins"
        font_size: "14sp"
        hint_text_color: rgba(3, 144, 252,255)
    MDIconButton:
        id: toogle
        icon:"eye"
        user_font_size: "20sp"
        pos_hint: {"center_x": .41, "center_y": .44}
        on_release:
            root.tooglevisibility()
    MDTextField:
        id: chpassw
        mode: "rectangle"
        hint_text: "Confirm Password"
        helper_text: "Use a Strong Password"
        password: True
        pos_hint: {"center_x": .335, "center_y": .35}
        helper_text_mode: 'on_focus'
        size_hint: .17, .07
        cursor_color: 0,0,0,1
        cursor_width: "2sp"
        multiline: False
        background_color: 0,0,0,0
        padding: 5
        font_name: "SPoppins"
        font_size: "14sp"
        hint_text_color: rgba(3, 144, 252,255)
    MDIconButton:
        id: tooglea
        icon:"eye"
        user_font_size: "20sp"
        pos_hint: {"center_x": .41, "center_y": .34}
        on_release:
            root.tooglevisibilitya()
    MDFillRoundFlatButton:
        text :"Sign Up"
        pos_hint: {"center_x": 0.2928, "center_y": 0.24}
        font_size: "20sp"
        size_hint: .1, .065
        font_name: "BPoppins"
        md_bg_color: rgba(0,88,188,255)
        on_press:
            root.manager.transition.direction = "left"
            root.submit()
    MDLabel:
        text: "Already have an account?"
        font_name: "LPoppins"
        font_size: "14sp"
        pos_hint: {"center_x": .336, "center_y": .167}
        halign: "center"
        color: rgba(0,0,0,255)
    MDTextButton:
        text: "Login"
        font_name: "LPoppins"
        font_size: "14sp"
        pos_hint: {"center_x": .415, "center_y": .167}
        color: rgba(66,135,245,255)
        on_press:
            root.manager.transition.direction = "left"
            root.manager.current = "loginscreen2"        
    MDFloatingActionButton:
        icon: "home"
        md_bg_color: rgba(255,255,255,255)
        text_color: rgba(66,135,245,255)
        pos_hint: {"center_x": .04, "center_y": .94}
        on_press:
            root.manager.transition.direction = "right"
            root.manager.current = "loginscreen"    
    MDIconButton:
        ripple_scale: 0
        icon: "github"
        pos_hint: {"center_x": 0.963, "center_y": .05}
        user_font_size: "40sp"
        on_press:
            root.git()