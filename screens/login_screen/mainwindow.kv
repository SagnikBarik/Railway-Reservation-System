<MainWindow>:
    name: "main"
    n: n
    f_st: f_st
    t_st: t_st
    date: date
    month: month
    day: day
    details: details
    Image:
        source: "screen.png"
        size_hint: 1.1, 1.1
        pos_hint: {"center_x": .5, "center_y": .5}
    MDLabel:
        id: n
        halign: "center"
        pos_hint: {"center_x": .127, "center_y": 0.9297}
        text: "Account Name: "
        font_name: "BPoppins"
        font_size: "45sp"
        color: rgba(0,0,0,255)
    MDTextField:
        id:f_st
        mode: "rectangle"
        hint_text: "From"
        helper_text: "Enter values in capital only"
        helper_text_mode: "on_focus"
        pos_hint: {"center_x": .12, "center_y": .7}
        helper_text_mode: 'on_focus'
        size_hint: .17, .07
        cursor_color: 0,0,0,1
        cursor_width: "2sp"
        multiline: False
        background_color: 0,0,0,0
        padding: 15
        font_name: "SPoppins"
        font_size: "14sp"
        hint_text_color: rgba(3, 144, 252,255)
    MDTextField:
        id:t_st
        mode: "rectangle"
        hint_text: "To"
        helper_text: "Enter values in capital only"
        helper_text_mode: "on_focus"
        pos_hint: {"center_x": .12, "center_y": .6}
        helper_text_mode: 'on_focus'
        size_hint: .17, .07
        cursor_color: 0,0,0,1
        cursor_width: "2sp"
        multiline: False
        background_color: 0,0,0,0
        padding: 15
        font_name: "SPoppins"
        font_size: "14sp"
        hint_text_color: rgba(3, 144, 252,255)
    MDTextField:
        id:date
        mode: "rectangle"
        hint_text: "Date"
        pos_hint: {"center_x": .12, "center_y": .5}
        helper_text_mode: 'on_focus'
        size_hint: .17, .07
        cursor_color: 0,0,0,1
        cursor_width: "2sp"
        multiline: False
        background_color: 0,0,0,0
        padding: 15
        font_name: "SPoppins"
        font_size: "14sp"
        hint_text_color: rgba(3, 144, 252,255)
    MDTextField:
        id:month
        mode: "rectangle"
        hint_text: "Month"
        pos_hint: {"center_x": .12, "center_y": .4}
        helper_text_mode: 'on_focus'
        size_hint: .17, .07
        cursor_color: 0,0,0,1
        cursor_width: "2sp"
        multiline: False
        background_color: 0,0,0,0
        padding: 15
        font_name: "SPoppins"
        font_size: "14sp"
        hint_text_color: rgba(3, 144, 252,255)
    #MDDropDownItem:
        #id: day
        #pos_hint: {"center_x": 0.12,"center_y": 0.3}
        #text:"Day"
        #on_release: self.set_item("Sun","Mon","Tue","Wed")
    MDTextField:
        id:day
        mode: "rectangle"
        hint_text: "Day"
        pos_hint: {"center_x": .12, "center_y": .3}
        helper_text_mode: 'on_focus'
        size_hint: .17, .07
        cursor_color: 0,0,0,1
        cursor_width: "2sp"
        multiline: False
        background_color: 0,0,0,0
        padding: 15
        font_name: "SPoppins"
        font_size: "14sp"
        hint_text_color: rgba(3, 144, 252,255)
    MDFillRoundFlatButton:
        text :"Show"
        pos_hint: {"center_x": 0.08, "center_y": 0.15}
        font_size: "20sp"
        size_hint: .1, .065
        font_name: "BPoppins"
        md_bg_color: 0,45/255,104/255,1
        on_press:
            #root.manager.transition.direction = "left"
            root.Show()
    MDFlatButton:
        text :"Check"
        pos_hint: {"center_x": 0.25, "center_y": 0.7}
        font_size: "20sp"
        size_hint: .1, .065
        font_name: "BPoppins"
        md_bg_color: 0,45/255,104/255,1
        on_press:
            root.check()
    MDFlatButton:
        text :"Check"
        pos_hint: {"center_x": 0.25, "center_y": 0.6}
        font_size: "20sp"
        size_hint: .1, .065
        font_name: "BPoppins"
        md_bg_color: 0,45/255,104/255,1
        on_press:
            root.check2()
    MDIconButton:
        icon:"logout"
        pos_hint: {"center_x": 0.95, "center_y": .94}
        user_font_size: "40sp"
        on_release:
            root.manager.current = "loginscreen2"
            root.manager.transition.direction = "down"
    MDCard:
        
        size_hint: (.4,.7)
        pos_hint: {"center_x": .65, "center_y": .5}
        md_bg_color: 1,1,1,1
        elevation: 10
        radius: [35,35,35,35]
        padding: 15
        ScrollView:
            MDList:
                id: details

                    